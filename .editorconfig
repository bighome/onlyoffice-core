# top-most EditorConfig file
root                     = true

[*]
charset                  = utf-8
end_of_line              = lf
insert_final_newline     = true
indent_style             = space
# indent_size              = 4
trim_trailing_whitespace = true

[Makefile]
indent_style             = tab
tab_width                = 4
trim_trailing_whitespace = false

[*.{bat,sh,psm1,mk}]
indent_style             = tab
tab_width                = 4
trim_trailing_whitespace = false

[*.{c,h,cpp}]
charset                  = utf-8-bom
end_of_line              = crlf
indent_style             = tab
tab_width                = 4
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size              = 2
